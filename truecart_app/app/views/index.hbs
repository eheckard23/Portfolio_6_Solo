{{# each products }}
	<div class="row">
		{{# each this }}
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
			  <img src="{{ this.img }}" alt="..." class="img-responsive">
			  <div class="caption">
			    <h3 class="title">{{ this.title }}</h3>
			    <p class="description">{{ this.description }}</p>
			    <p class="price">{{ this.price }}</p>
			    <p><a href="/add-to-cart/{{ this._id }}" class="btn btn-primary" role="button">Cart</a> <a href="#" class="btn btn-default" role="button">One-Click Purchase</a></p>
			  </div>
			</div>
		</div>
		{{/each}}
	</div>
{{/each}}


